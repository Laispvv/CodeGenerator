using hbhg.Application.Interfaces;
using hbhg.Application.Services.Common;
using hbhg.Application.ViewModels;
using hbhg.Domain.Entities;
using hbhg.Domain.Interfaces.Service;

namespace hbhg.Application.Services
{
    public class NOTICIAAppService : ServiceBase<NOTICIAViewModel, NOTICIA>, INOTICIAAppService
    {
        private readonly IMapper _mapper;
        private readonly INOTICIAService _noticiaService;
        public NOTICIAAppService(IMapper mapper, INOTICIAService noticiaService) : base(mapper, noticiaService)
        {
            _mapper = mapper;
            _noticiaService = noticiaService;
        }
    }
