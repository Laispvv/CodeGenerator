ºusing AutoMapper;
using hbhg.Application.Interfaces;
using hbhg.Application.Services.Common;
using hbhg.Application.ViewModels;
using hbhg.Domain.Entities;
using hbhg.Domain.Interfaces.Service;

namespace hbhg.Application.Services
{
    public class FUNCIONARIOAppService : ServiceBase<FUNCIONARIOViewModel, FUNCIONARIO>, IFUNCIONARIOAppService
    {
        private readonly IMapper _mapper;
        private readonly IFUNCIONARIOService _funcionarioService;
        public FUNCIONARIOAppService(IMapper mapper, IFUNCIONARIOService funcionarioService) : base(mapper, funcionarioService)
        {
            _mapper = mapper;
            _funcionarioService = funcionarioService;
        }
    }
}