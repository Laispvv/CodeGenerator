namespace hbhg.Application.Services
{
    public class PALAVRAAppService : ServiceBase<PALAVRAViewModel, PALAVRA>, IPALAVRAAppService
    {
        private readonly IMapper _mapper;
        private readonly IPALAVRAService _palavraService;
