using hbhg.Application.Interfaces;
using hbhg.Application.Services.Common;
using hbhg.Application.ViewModels;
using hbhg.Domain.Entities;
using hbhg.Domain.Interfaces.Service;

namespace hbhg.Application.Services
{
    public class PRODUTOAppService : ServiceBase<PRODUTOViewModel, PRODUTO>, IPRODUTOAppService
    {
        private readonly IMapper _mapper;
        private readonly IPRODUTOService _produtoService;
        public PRODUTOAppService(IMapper mapper, IPRODUTOService produtoService) : base(mapper, produtoService)
        {
            _mapper = mapper;
            _produtoService = produtoService;
        }
    }
}